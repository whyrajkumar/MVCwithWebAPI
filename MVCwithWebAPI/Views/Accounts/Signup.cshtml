@model MVCwithWebAPI.Models.User
@{
    ViewBag.Title = "Signup";
}
<h2>Signup</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Signup" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Click here to Login", "Login")
</div>
@section Scripts {


    @Scripts.Render("~/bundles/jqueryval")


    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $('form').submit(function (e) {
                e.preventDefault(); // Prevent the form from submitting normally

                // Perform client-side validation
                var name = $('#UserName').val();
                var address = $('#Password').val();


                if (name === '') {
                    alert('Please enter a User Name.');
                    return false; // Prevent form submission
                }

                if (address === '') {
                    alert('Please enter an Password.');
                    return false; // Prevent form submission
                }

                // If all validation passed, submit the form
                this.submit();
            });
        });
    </script>
}